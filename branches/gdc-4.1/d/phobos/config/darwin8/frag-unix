alias void* pthread_t;
static if (size_t.sizeof == 4)
{
    struct pthread_attr_t { ubyte[40] opaque; }
    struct pthread_cond_t { ubyte[28] opaque; }
    struct pthread_condattr_t { ubyte[8] opaque; }
    struct pthread_mutex_t { ubyte[44] opaque; }
    struct pthread_mutexattr_t { ubyte[12] opaque; }
}
else
{
    struct pthread_attr_t { Clong_t sig; ubyte[56] opaque; }
    struct pthread_cond_t { Clong_t sig; ubyte[40] opaque; }
    struct pthread_condattr_t { Clong_t sig; ubyte[8] opaque; }
    struct pthread_mutex_t { Clong_t sig; ubyte[56] opaque; }
    struct pthread_mutexattr_t { Clong_t sig; ubyte[8] opaque; }
}
