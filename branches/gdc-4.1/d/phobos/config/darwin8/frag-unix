/* siginfo_t is not finished... see gen_unix.c */
struct siginfo_t {
    int si_signo;
    int si_errno;
    int si_code;
    static if (size_t.sizeof == 4)
       ubyte[52] ___pad1;
    else
    {
	pid_t si_pid;
	uid_t si_uid;
	int si_status;
	void *si_addr;
	union sigval {

	 int sival_int;
	 void *sival_ptr;
	}
	sigval si_value;
	Clong_t si_band;
	Culong_t pad[7];
    }	
}

struct sigaction_t {
    union {
        void function(int) sa_handler;
        void function(int, siginfo_t *, void *) sa_sigaction;
    }
    sigset_t sa_mask;
    int sa_flags;
}


